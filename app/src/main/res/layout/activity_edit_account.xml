<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundBrushColor"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="280dp"
        android:layout_width="match_parent"
        app:elevation="0dp"
        app:expanded="false">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:toolbarId="@+id/edit_account_toolbar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleGravity="top|center_horizontal"
            app:title="Edit Account"
            app:expandedTitleTextAppearance="@style/ExpandedTitleTextAppearance"
            app:collapsedTitleTextAppearance="@style/CollapsedTitleTextAppearance"
            app:expandedTitleMarginTop="-100dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/edit_account_toolbar"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                app:contentInsetStartWithNavigation="0dp"
                android:layout_gravity="bottom"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        android:layout_marginBottom="55dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_left_circle_view_top"
            android:translationZ="2dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_right_circle_view_top"
            android:translationZ="2dp"
            android:layout_alignParentEnd="true"/>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_left_circle_view_top"
                        android:translationZ="2dp"
                        android:layout_marginTop="35dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_right_circle_view_top"
                        android:translationZ="2dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="35dp"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:translationZ="1dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            app:civ_border_color="@android:color/darker_gray"
                            app:civ_border_width="0.4dp"/>

                        <TextView
                            android:id="@+id/profile_image_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@android:color/white"
                            android:textSize="34sp"/>

                        <ImageView
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/ic_brightness"
                            android:translationZ="2dp"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/rounded_background"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:paddingTop="65dp"
                            android:paddingBottom="30dp"
                            android:layout_marginTop="35dp"
                            android:backgroundTint="?attr/backgroundCardColor">

                            <TextView
                                android:id="@+id/change_profile_image_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Change Photo"
                                android:layout_gravity="center"
                                android:textSize="18sp"
                                android:padding="10dp"
                                android:textColor="?attr/colorAccent"
                                style="@style/CustomTransparentViewStyle"
                                android:backgroundTint="?attr/backgroundCardColor"
                                android:onClick="onClick"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_people_icon"
                                    android:layout_gravity="center"/>

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/edit_name_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    app:hintEnabled="false"
                                    app:errorEnabled="false">

                                    <android.support.design.widget.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Name"
                                        android:backgroundTint="@color/colorGray"/>
                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/edit_surname_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="40dp"
                                    app:hintEnabled="false"
                                    app:errorEnabled="false">

                                    <android.support.design.widget.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Surname"
                                        android:backgroundTint="@color/colorGray"/>
                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="25dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_phone_icon"
                                    android:layout_gravity="center"/>

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/edit_phone_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    app:hintEnabled="false"
                                    app:errorEnabled="false">

                                    <com.santalu.widget.MaskEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/colorGray"
                                        android:hint="Phone"
                                        android:inputType="phone"
                                        app:met_mask="+90(###) ### ## ##"/>
                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="25dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_gender_icon"
                                    android:layout_gravity="center"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="25dp"
                                    android:layout_marginEnd="4dp">

                                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                                        android:id="@+id/genderSpinner"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:smsp_hint="Gender"
                                        app:smsp_hintTextSize="18sp"
                                        app:smsp_underlineColor="@android:color/transparent"
                                        app:smsp_underlineSize="0dp"
                                        app:smsp_enableFloatingLabel="false"
                                        android:popupBackground="@drawable/rounded_background">
                                    </com.chivorn.smartmaterialspinner.SmartMaterialSpinner>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/colorGray"
                                        android:layout_alignParentBottom="true"/>
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="25dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_birthday_icon"
                                    android:layout_gravity="center"/>

                                <LinearLayout
                                    android:id="@+id/edit_birthday_item"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="25dp"
                                    android:layout_marginEnd="3dp"
                                    android:onClick="onClick">

                                    <TextView
                                        android:id="@+id/birthday_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Birthday"
                                        android:textColorHint="@color/colorDarkGray"
                                        android:textSize="18sp"
                                        android:paddingTop="5dp"
                                        android:paddingBottom="5dp"
                                        android:textColor="?attr/primaryTextColor"/>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/colorGray"/>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="25dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_location_icon"
                                    android:layout_gravity="center"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="25dp"
                                    android:layout_marginEnd="4dp">

                                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                                        android:id="@+id/locationSpinner"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:smsp_hint="Location"
                                        app:smsp_hintTextSize="18sp"
                                        app:smsp_underlineColor="@android:color/transparent"
                                        app:smsp_underlineSize="0dp"
                                        app:smsp_enableFloatingLabel="false"
                                        android:popupBackground="@drawable/rounded_background">
                                    </com.chivorn.smartmaterialspinner.SmartMaterialSpinner>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/colorGray"
                                        android:layout_alignParentBottom="true"/>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/update_email_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="25dp"
                            android:paddingEnd="25dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/rounded_item_view"
                            android:backgroundTint="?attr/backgroundCardColor"
                            android:onClick="onClick">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textColor="?attr/primaryTextColor"
                                android:textSize="18sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="test@app.com"
                                android:textColor="?attr/colorAccent"/>
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_left_circle_view"
                        android:translationZ="2dp"
                        android:layout_alignParentBottom="true"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_right_circle_view"
                        android:translationZ="2dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_above="@id/mainBottomNavigationView"
            android:background="@drawable/ic_left_circle_view"
            android:translationZ="2dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_above="@id/mainBottomNavigationView"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_right_circle_view"
            android:translationZ="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="?attr/backgroundBrushColor">

            <TextView
                android:id="@+id/edit_cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Cancel"
                android:gravity="center"
                android:textColor="@color/selector_transparent_view_text_color"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                style="@style/CustomTransparentViewStyle"
                android:onClick="onClick"/>

            <TextView
                android:id="@+id/edit_save_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Save"
                android:gravity="center"
                android:textColor="@color/selector_transparent_view_text_color"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                style="@style/CustomTransparentViewStyle"
                android:enabled="false"
                android:onClick="onClick"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>