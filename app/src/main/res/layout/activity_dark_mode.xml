<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundBrushColor"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="280dp"
        android:layout_width="match_parent"
        app:elevation="0dp"
        app:expanded="false">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:toolbarId="@+id/dark_mode_toolbar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleGravity="top|center_horizontal"
            app:title="Dark Mode"
            app:expandedTitleTextAppearance="@style/ExpandedTitleTextAppearance"
            app:collapsedTitleTextAppearance="@style/CollapsedTitleTextAppearance"
            app:expandedTitleMarginTop="-100dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/dark_mode_toolbar"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                app:contentInsetStartWithNavigation="0dp"
                android:layout_gravity="bottom"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        android:layout_marginBottom="55dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_left_circle_view_top"
            android:translationZ="2dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_right_circle_view_top"
            android:translationZ="2dp"
            android:layout_alignParentEnd="true"/>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:lottie_fileName="dark_mode.json"
                    app:lottie_autoPlay="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use a darker theme to keep your eyes comfortable at night. Dark theme is recommended for your eyes."
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_circle_text_view"
                    android:backgroundTint="?attr/backgroundCardColor"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Open Now"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textColor="?attr/primaryTextColor"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:background="?attr/lineColor"
                        android:layout_marginEnd="15dp"/>

                    <com.suke.widget.SwitchButton
                        android:id="@+id/dark_mode_switch"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="0"
                        app:sb_checkline_color="?attr/colorAccent"
                        app:sb_checked_color="?attr/colorAccent"
                        app:sb_uncheckcircle_color="@android:color/transparent"
                        app:sb_background="@android:color/transparent"
                        app:sb_uncheck_color="?attr/lineColor"/>

                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_above="@id/mainBottomNavigationView"
        android:background="@drawable/ic_left_circle_view"
        android:translationZ="2dp"
        android:layout_gravity="bottom"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_above="@id/mainBottomNavigationView"
        android:layout_gravity="bottom|end"
        android:background="@drawable/ic_right_circle_view"
        android:translationZ="2dp"/>

</android.support.design.widget.CoordinatorLayout>