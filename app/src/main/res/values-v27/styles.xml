<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="isLightTheme">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">@android:color/black</item>
        <item name="backgroundBrushColor">@color/colorPrimaryDark</item>
        <item name="backgroundCardColor">@android:color/white</item>
        <item name="messageBackgroundColor">@color/colorMessageBackground</item>
        <item name="buttonControlColor">@color/colorGray</item>
        <item name="lineColor">@color/colorLightGray</item>
        <item name="rippleColor">@color/colorGray</item>
        <item name="pvtRadiusColor">@android:color/white</item>
        <item name="searchColor">@color/colorLightGray</item>
        <item name="extColor">@color/colorLightGray</item>
        <item name="colorControlNormal">@color/colorDarkGray</item>
        <item name="photoBackgroundColor">#A5A5A5</item>
    </style>

    <style name="AppTheme.DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="isLightTheme">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">@android:color/white</item>
        <item name="backgroundBrushColor">@color/colorBackground</item>
        <item name="backgroundCardColor">@color/colorLightBlack</item>
        <item name="messageBackgroundColor">@color/colorLightBlack</item>
        <item name="buttonControlColor">@color/colorLightBlack</item>
        <item name="lineColor">@color/colorDarkGray</item>
        <item name="rippleColor">@color/colorDarkGray</item>
        <item name="pvtRadiusColor">@color/colorLightBlack</item>
        <item name="searchColor">@color/colorLightBlack</item>
        <item name="extColor">@color/colorLightBlack</item>
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="photoBackgroundColor">#2D2D2D</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_down</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_up</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_up</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>